<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<LinearLayout
    android:gravity="center"
    android:layout_marginTop="40dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
 <Button
     android:layout_width="80dp"
     android:layout_height="40dp"
     android:id="@+id/btnDark"
     android:text="L3" />
 <Button
     android:layout_width="80dp"
     android:layout_height="40dp"
     android:id="@+id/btnRead"
     android:text="L3"
     />
 <Button
     android:layout_width="90dp"
     android:layout_height="40dp"
     android:id="@+id/btnImplicitIntent"
     android:text="L8/10"
     />
 <Button
     android:id="@+id/btnClickme"
     android:layout_width="80dp"
     android:layout_height="40dp"
     android:text="click me" />
</LinearLayout>

<LinearLayout
    android:layout_marginTop="20dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

 <Button
     android:id="@+id/btnWebView"
     android:layout_width="115dp"
     android:layout_height="40dp"
     android:text="Web-View" />
 <Button
     android:id="@+id/btnMulIntent"
     android:layout_width="150dp"
     android:layout_height="40dp"
     android:text="multiple intents" />
</LinearLayout>
   <LinearLayout
       android:layout_gravity="center"
       android:gravity="center"
       android:layout_marginTop="20dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
        android:id="@+id/btnUiUx"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="UI/UX"/>
    <Button
        android:id="@+id/btnDataBase"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="DataBase"
        />
    <Button
        android:id="@+id/btnViewBinding"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Binding"
        />
   </LinearLayout>


<LinearLayout
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
 android:orientation="horizontal">
 <Button
     android:id="@+id/btnDialogBoxes"
     android:layout_width="120dp"
     android:layout_height="40dp"
     android:text="Dialog1 Boxes"
     />
 <Button
     android:id="@+id/btnCustomDialog"
     android:layout_width="120dp"
     android:layout_height="40dp"
     android:text="Dialog2 Boxes"
     />
</LinearLayout>
<LinearLayout
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
 <Button
     android:id="@+id/btnDynamicPhotoFrame"
     android:layout_width="100dp"
     android:layout_height="40dp"
     android:text="DPF"
     />
 <Button
     android:id="@+id/btnListView1"
     android:layout_width="100dp"
     android:layout_height="40dp"
     android:text="LV(TD)"
     />
 <Button
     android:id="@+id/btnCustomListView"
     android:layout_width="100dp"
     android:layout_height="40dp"
     android:text="CLV"
     />
</LinearLayout>
 <LinearLayout
     android:layout_gravity="center"
     android:gravity="center"
     android:orientation="horizontal"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">

  <Button
      android:id="@+id/btnRecyclerView"
      android:layout_width="100dp"
      android:layout_height="40dp"
      android:text="RV"
      />
  <Button
      android:id="@+id/btnPractice"
      android:layout_width="100dp"
      android:layout_height="40dp"
      android:text="practice"
      />
  <Button
      android:id="@+id/btnApi"
      android:layout_width="100dp"
      android:layout_height="40dp"
      android:text="API"
      />
 </LinearLayout>

 <LinearLayout
     android:layout_gravity="center"
     android:gravity="center"
     android:orientation="horizontal"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">
  <Button
      android:id="@+id/btnNewActivity"
      android:layout_width="100dp"
      android:layout_height="40dp"
      android:text="Recipes"
      />
  <Button
      android:id="@+id/btnCart"
      android:layout_width="100dp"
      android:layout_height="40dp"
      android:text="Cart"
      />
 </LinearLayout>
 <Button
     android:id="@+id/btnNotification"
     android:layout_width="match_parent"
     android:layout_height="40dp"
     android:layout_marginTop="10dp"
     android:layout_marginStart="20dp"
     android:layout_marginEnd="20dp"
     android:text="Notification"
     />
 <Button
     android:id="@+id/btnNavigationView"
     android:layout_width="match_parent"
     android:layout_height="40dp"
     android:layout_marginTop="10dp"
     android:layout_marginStart="20dp"
     android:layout_marginEnd="20dp"
     android:text="Bottom Navigation View"
     />


</LinearLayout>