<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".recyclerView.NewsDetailActivity">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:src="@drawable/img1"
    android:scaleType="centerCrop"
    android:id="@+id/newsImage"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newsHeading"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:text="U.K. Foreign Secretary James Cleverly raises issue of BBC tax searches with EAM Jaishankar"
        android:layout_gravity="center"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/newsContant"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_margin="10dp"
            android:text="@string/news_contant"
            android:layout_gravity="center"
            />
    </ScrollView>
</LinearLayout>